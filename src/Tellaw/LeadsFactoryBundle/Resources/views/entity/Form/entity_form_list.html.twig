{# src/Acme/BlogBundle/Resources/views/Blog/index.html.twig #}
{% extends 'TellawLeadsFactoryBundle::base.html.twig' %}
{% block body %}
<div class="main_container">

    <div class="row-fluid">

        <div class="span8">
            <div class="heading-sec">
                <h1>Liste des Formulaires</h1>
            </div>
        </div>

        <div class="span4">
            <button class="btn btn-success btn-large"  onclick="window.location.href='{{ path ('_form_new') }}'">Cr√©er un nouveau formulaire</button>
        </div>

    </div>

    <div class="row-fluid">

        <div class="span12">
            <div class="">
                <div class="streaming-table">
                    <table id="stream_table" class="table table-striped table-bordered">
                        <thead>
                        <tr>
                            <th>ID</th>
                            <th>Name</th>
                            <th>Description</th>
                            <th>Actions</th>
                        </tr>
                        </thead>
                        <tbody>

                        {% for item in forms %}
                            <tr>
                                <td>{{ item.id }}</td>
                                <td>{{ item.name }}</td>
                                <td>{{ item.description }}</td>
                                <td style="text-align:center">
                                    <center>
                                        <button type="button" class="btns  blue  m-sml-btn " style="margin:0px 0px 0px 5px" onClick="window.location.href='{{ path('_form_edit', {'id': item.id}) }}'">Edit</button>
                                        <button type="button" class="btns  red  m-sml-btn " style="margin:0px 0px 0px 5px" onClick="window.location.href='{{ path('_form_delete', {'id': item.id}) }}'">Delete</button>
                                        <button type="button" class="btns  green  m-sml-btn " style="margin:0px 0px 0px 5px">Preview</button>
                                        <button type="button" class="btns  yellow  m-sml-btn " style="margin:0px 0px 0px 5px" onClick="window.location.href='{{ path('_entity_leads_export', {'id': item.id}) }}'">Exporter</button>
                                    </center>
                                </td>
                            </tr>
                        {% endfor %}

                        </tbody>
                    </table>

                </div>
            </div>
        </div>

    </div>

</div>

{% endblock %}