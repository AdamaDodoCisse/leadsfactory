{# src/Acme/BlogBundle/Resources/views/Blog/index.html.twig #}
{% extends 'TellawLeadsFactoryBundle::base.html.twig' %}
{% block body %}
<div class="main_container">

    <div class="row-fluid">

        <div class="span12">
            <div class="heading-sec">
                <h1>Leads enregistrés</h1>
            </div>
        </div>

    </div>

    <div class="row-fluid">

        <div class="span9">
            <div class="">
                <div class="streaming-table">
                    <table id="stream_table" class="table table-striped table-bordered">
                        <thead>
                        <tr>
                            <th>Identifiant</th>
                            <th>Lastname</th>
                            <th>Firstname</th>
                            <th>Status</th>
                            <th>Actions</th>
                        </tr>
                        </thead>
                        <tbody>

                        {% for item in elements %}
                            <tr onclick="window.location.href='{{ path('_leads_edit', {'id': item.id}) }}'">
                                <td>{{ item.id }}</td>
                                <td>{{ item.lastname }}</td>
                                <td>{{ item.firstname }}</td>
                                <td>{{ item.status }}</td>
                                <td style="text-align:center">
                                    <center>
                                    <button type="button" class="btns  blue  m-sml-btn " style="margin:0px 0px 0px 5px" onClick="window.location.href='{{ path('_leads_edit', {'id': item.id}) }}'">Edit</button>
                                    </center>
                                </td>
                            </tr>

                        {% else %}

                            <tr>
                                <td colspan="4">Aucun élément dans cette liste</td>

                            </tr>

                        {% endfor %}

                        </tbody>
                    </table>

                </div>
            </div>
        </div>

        <div class="span3">
            <div class="box paint">
                <div class="title">
                    <h4> <i class="icon-book"></i><span>Actions</span> </h4>
                </div>

                <!-- End .title -->
                <div class="content">
                    <a href="{{ path ('_entity_leads_export') }}" style="color:#FFF">&raquo; Exporter</a>
                </div>
                <!-- End .content -->
                <a class="btn change_color_outside"><i class="paint_bucket"></i></a>
            </div>
        </div>

    </div>

</div>

{% endblock %}