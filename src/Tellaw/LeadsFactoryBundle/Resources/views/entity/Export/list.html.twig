{# src/Acme/BlogBundle/Resources/views/Blog/index.html.twig #}
{% extends 'TellawLeadsFactoryBundle::base.html.twig' %}
{% block body %}
<div class="main_container">

    <div class="row-fluid">

        <div class="span12">
            <div class="heading-sec">
                <h1>Export history</h1>
            </div>
        </div>

    </div>

    <div class="row-fluid">

        <div class="span12">
            <div class="">
                <div class="streaming-table">
                    <table id="stream_table" class="table table-striped table-bordered">
                        <thead>
                        <tr>
                            <th>Id</th>
                            <th>Lead_Id</th>
                            <th>Form_Id</th>
                            <th>Form type</th>
                            <th>Créé le</th>
                            <th>Planifié le</th>
                            <th>Exécuté le</th>
                            <th>Status</th>
                            <th>Actions</th>
                        </tr>
                        </thead>
                        <tbody>

                        {% for job in jobs %}
                            <tr>
                                <td>{{ job.id }}</td>
                                <td>{{ job.lead.id }}</td>
                                <td>{{ job.form.id }}</td>
                                <td>{{ job.form.formType }}</td>
                                <td>{{ job.created_at.date }}</td>
                                <td>{{ job.scheduled_at }}</td>
                                <td>{% if job.executed_at.date != null %}{{ job.executed_at.date }}{% endif %}</td>
                                <td>{{ job.status }}</td>
                                <td style="text-align:center">

                                </td>
                            </tr>

                        {% else %}
                            <tr>
                                <td colspan="5">Aucun élément.</td>
                            </tr>
                        {% endfor %}

                        </tbody>
                    </table>

                </div>
            </div>
        </div>

    </div>

</div>

{% endblock %}