{# src/Acme/BlogBundle/Resources/views/Blog/index.html.twig #}
{% extends 'TellawLeadsFactoryBundle::base.html.twig' %}
{% block body %}
<div class="main_container">

    <div class="row-fluid">

        <div class="span12">
            <div class="heading-sec">
                <h1>Tâches d'export</h1>
            </div>
        </div>

    </div>

    <div class="row-fluid">

        <div class="span9">
            <div class="">
                <div class="streaming-table">
                    <table id="stream_table" class="table table-striped table-bordered">
                        <thead>
                        <tr>
                            <th>Id</th>
                            <th>Formulaire</th>
                            <th>Type</th>
                            <th>Planifié le</th>
                            <th>Exécuté le</th>
                            <th>Lead_Id</th>
                            <th>Méthode</th>
                            <th>Status</th>
                        </tr>
                        </thead>
                        <tbody>

                        {% for job in jobs %}
                            <tr>
                                <td>{{ job.id }}</td>
                                <td>{{ job.form.name }}</td>
                                <td>{{ job.form.formType }}</td>
                                <td>{{ job.scheduledAt.date }}</td>
                                <td>{% if job.executedAt != null %}{{ job.executedAt.date }}{% endif %}</td>
                                <td>{{ job.lead.id }}</td>
                                <td>{{ job.method }}</td>
                                <td>{{ job.status }}</td>
                            </tr>

                        {% else %}
                            <tr>
                                <td colspan="8">Aucun élément.</td>
                            </tr>
                        {% endfor %}

                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <div class="span3">
            <div class="box paint">
                <div class="title">
                    <h4> <i class="icon-book"></i><span>Actions</span> </h4>
                </div>

                <!-- End .title -->
                <div class="content">
                    <a href="{{ path ('_entity_leads_export') }}" style="color:#FFF">&raquo; Exporter</a>
                </div>
                <!-- End .content -->
                <a class="btn change_color_outside"><i class="paint_bucket"></i></a>
            </div>
        </div>

    </div>

</div>

{% endblock %}