{# src/Acme/BlogBundle/Resources/views/Blog/index.html.twig #}
{% extends 'TellawLeadsFactoryBundle::base.html.twig' %}
{% block body %}
<div class="main_container">

    <div class="row-fluid">

        <div class="span12">
            <div class="heading-sec">
                <h1>Export history</h1>
            </div>
        </div>

    </div>

    <div class="row-fluid">

        <div class="span12">
            <div class="">
                <div class="streaming-table">
                    <table id="stream_table" class="table table-striped table-bordered">
                        <thead>
                        <tr>
                            <th>Id</th>
                            <th>Lead_Id</th>
                            <th>Form_Id</th>
                            <th>Form type</th>
                            <th>Date</th>
                            <th>Status</th>
                            <th>Actions</th>
                        </tr>
                        </thead>
                        <tbody>

                        {% for item in history %}
                            <tr>
                                <td>{{ item.id }}</td>
                                <td>{{ item.lead.id }}</td>
                                <td>{{ item.form.id }}</td>
                                <td>{{ item.form.formType }}</td>
                                <td>{{ item.exportdate.date }}</td>
                                <td>{{ item.status }}</td>
                                <td style="text-align:center">

                                </td>
                            </tr>

                        {% else %}

                            <tr>
                                <td colspan="5">Aucun élément dans cette liste</td>

                            </tr>

                        {% endfor %}

                        </tbody>
                    </table>

                </div>
            </div>
        </div>

    </div>

</div>

{% endblock %}