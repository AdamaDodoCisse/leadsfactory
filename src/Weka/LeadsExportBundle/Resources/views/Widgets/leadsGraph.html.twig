<script>
    var chart = c3.generate({
        bindto: '#widget-{{ id }}',
        data: {
            {{ data|raw }}
        },
        axis: {
            x: {
                type: 'timeseries',
                tick: {
                    format: '%Y-%m-%d'
                }
            }
        }
    });

    $("#title-{{ id }}").text("{{ widget.name }}");
    $("#description-{{ id }}").text("{{ widget.description | raw }}");

</script>
