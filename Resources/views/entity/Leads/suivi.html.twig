{# src/Acme/BlogBundle/Resources/views/Blog/index.html.twig #}
{% extends 'TellawLeadsFactoryBundle::base.html.twig' %}
{% form_theme filters_form 'TellawLeadsFactoryBundle:Form:fields.html.twig' %}
{% block body %}

    <style>
        .ui-autocomplete {
            background-color:#FFF;
            max-height: 100px;
            overflow-y: auto;
            /* prevent horizontal scrollbar */
            overflow-x: hidden;
            width:308px;
            border:1px solid #e0e0e0;
            cursor: pointer;
            padding: 0px;
        }
        .ui-autocomplete li {
            display:block;
            padding: 5px 0px 5px 12px;
        }
        .ui-autocomplete li:hover {
            background-color:#e0e0e0;
        }
        .filter_form form{margin-top: -4.5%}
        .filter_form form #form div {
            display: inline-block;
            width: 45%;
            margin: 1%;
        }
        #row-form_form {
            width: 92.5% !important;
        }
        .filter_form form .form-actions {
            display:block !important;
        }
        .filter_form form .form-actions .span3{
            display: none !important;
        }
            /* IE 6 doesn't support max-height
             * we use height instead, but this forces the menu to always be this tall
             */
        * html .ui-autocomplete {
            height: 100px;
        }

        .toggle-filters-btn {text-align: right;top: -2%;}
        .toggle-filters-btn strong {cursor: pointer;text-align: right}
        .toggle-filters-btn strong:hover {text-decoration: underline}
    </style>
    <input type="hidden" id="defaultUser" value="{{ user.firstName|capitalize }} {{ user.lastName|capitalize }}"/>




    <div class="col-md-12">
        <div class="heading-sec" id="intro6">
            <h1>Administration
                <i>
                    des leads
                    {% if type == 'mylist' %} m'étant affectées {% endif %}
                </i></h1>
            <div style="clear:both"></div>
            <div class="titleDescription">
                <em>
                    {% if type == 'list' %}
                        Un &laquo;leads&raquo; représente un formulaire posté depuis un de vos sites vers votre SI. Il s'agit de l'enregistrement brut des données, qui suivant votre configuration dans le formulaire source, va donner des exports vers les differents outils de votre système d'informations.
                    {% else %}
                        Un «leads» représente un formulaire posté depuis un de vos sites vers votre SI. Il s'agit de l'enregistrement brut des données, qui suivant votre configuration dans le formulaire source, va donner des exports vers les differents outils de votre système d'informations.
                    {% endif %}
                </em>
                <br/><br/>
            </div>
        </div>
    </div>



        <div class="col-md-12">

            <div class="widget-body custom-form">
                <div class="col-md-8 filter_form" style="border-right: 1px solid #ddd">
                    <h2>Filtrer la liste</h2>
                    {{ form(filters_form) }}
                </div>
                <div class="col-md-4 pull-right">
                    <h2>Télécharger la liste</h2>
                    {{ form(export_form) }}
                </div>
            </div>

            <!-- Nav tabs -->
            <ul class="nav nav-tabs" role="tablist">
                <li role="presentation" class="active"><a href="#home" aria-controls="home" role="tab" data-toggle="tab">Suivi commercial</a></li>
                {% if (isManagerOfATeam) %}
                <li role="presentation"><a href="#equipe" aria-controls="profile" role="tab" data-toggle="tab">Suivi de mon équipe</a></li>
                {% endif %}
                {% if (isInADpt) %}
                <li role="presentation"><a href="#departement" aria-controls="profile" role="tab" data-toggle="tab">Suivi du département "{{ dptName }}"</a></li>
                {% endif %}

            </ul>

            <!-- Tab panes -->
            <div class="tab-content" style="display:block">
                <div role="tabpanel" class="tab-pane active in" id="home">

                    <!-- Ajax loaded content -->


                </div>
{% if (isManagerOfATeam) %}



                <!-- Panel mon equipe -->
                <div role="tabpanel" class="tab-pane" id="equipe">

                    <!-- Ajax loaded content -->

                </div>

                <div role="tabpanel" class="tab-pane" id="departement">

                    <!-- Ajax loaded content -->

                 </div>



            </div>

        </div>

{% endif %}

    <script type="text/javascript">
        $( document ).ready(function() {
            $("#st_per_page option[value='{{ pagination.limit }}']").attr('selected', 'selected');
            $("#st_per_pageDpt option[value='{{ paginationDpt.limit }}']").attr('selected', 'selected');
            $("#st_per_pageTeam option[value='{{ paginationTeam.limit }}']").attr('selected', 'selected');

            initViewFilter();
            setAutoComplete();

            // Javascript to enable link to tab
            var url = document.location.toString();
            if (url.match('#')) {
                $('.nav-tabs a[href="#' + url.split('#')[1] + '"]').click();
            }

            $('#filterform').on('submit', function(e) {
                e.preventDefault(); // J'empêche le comportement par défaut du navigateur, c-à-d de soumettre le formulaire
                    var $this = $(this);
                    $.ajax({
                        url: '{{ path ('_leads_fragment_filterparam') }}',
                        type: $this.attr('method'),
                        data: $this.serialize(),
                        success: function(  ) {
                            updateTabs();
                        }
                    });

            });

            updateTabs();

        });

        function updateTabs () {
            loadMyLeadsTab();
            loadTeamLeadsTab();
            loadDptLeadsTab();
        }

        // Ajax Page
        var tabs = [];

        // Load default tab content
        function loadMyLeadsTab () {
            var url = "{{ path ('_leads_fragment_myleads') }}";
            var data = { } ;
            var container = $("#home")
            fragmentAjaxCall ( url, data, container,
                    function (result){} );
        }

        // Load default tab content
        function loadTeamLeadsTab () {
            var url = "{{ path ('_leads_fragment_teamleads') }}";
            var data = { } ;
            var container = $("#equipe")
            fragmentAjaxCall ( url, data, container,
                    function (result){} );
        }

        // Load default tab content
        function loadDptLeadsTab () {
            var url = "{{ path ('_leads_fragment_dptleads') }}";
            var data = { } ;
            var container = $("#departement")
            fragmentAjaxCall ( url, data, container,
                    function (result){} );
        }

        $( "#filterform" ).submit(function( event ) {
            if ( $("#form_affectation").val() == "") {
                $("#form_affectation").val( $("#defaultUser").val() );
            }
        });

        $('#st_per_page').change(function(){
            var route = '{{ path(pagination.route) }}';
            window.location.href = route + '/1/' + $(this).val()+location.search+"#home";
        });

        $('#st_per_pageDpt').change(function(){
            var route = '{{ path(pagination.route) }}';
            window.location.href = route + '/1/' + $(this).val()+location.search+"#departement";
        });

        $('#st_per_pageTeam').change(function(){
            var route = '{{ path(pagination.route) }}';
            window.location.href = route + '/1/' + $(this).val()+location.search+"equipe";
        });

        $.fn.scrollView = function () {
            return this.each(function () {
                $('html, body').animate({
                    scrollTop: $(this).offset().top
                }, 1000);
            });
        };

        function initViewFilter() {
            $("#filterform").prepend('<div class="form-group toggle-filters-btn ' +
                    'col-md-12"><strong>[<i class="toggle-filters-i">-</i>] Filtrage avancé</strong></div>');

            var url = window.location.href;
            var matches = url.match(/[a-z\d]+=[a-z\d]+/gi);
            var queryCount = matches? matches.length : 0;

            // Scroll to results Or hide filters
            if (queryCount > 0) $('#results-list').scrollView();
            else toggleFilters();

            // init filter button action
            $(".toggle-filters-btn").on('click', function(){toggleFilters()})
            //$(".toggle-filters-btn").click();

            // If Page is MyList then change affectation
            {% if type == 'mylist' %}
            console.log("looo");
            $("#row-form_affectation input")
                    .val('{{ firstName }} {{ lastName }}')
                    .attr('disabled', 'disabled');
            $(".filter_form form").attr('action', "{{ path(app.request.attributes.get('_route')) }}");
            {% endif %}
        }

        function setAutoComplete () {
            $( "#form_affectation" ).autocomplete({
                source: "{{ path('_leads_users_search_ajax') }}",
                minLength: 3,
                click: function( event, ui ) {
                    event.preventDefault();
                    $( "#form_affectation").val(ui.item.label);
                    return false;
                },
                select: function( event, ui ) {
                    event.preventDefault();
                    $( "#form_affectation").val(ui.item.label);
                    return false;
                }
            });
        }

        function toggleFilters() {
            $("#row-form_email").slideToggle('fast');
            $("#row-form_utmcampaign").slideToggle('fast');
            $("#row-form_firstname").slideToggle('fast');
            $("#row-form_lastname").slideToggle('fast');
            $("#row-form_datemin").slideToggle('fast');
            $("#row-form_datemax").slideToggle('fast');
            $("#row-form_keyword").slideToggle('fast');
            $("#row-form_affectation").slideToggle('fast');
            $("#row-form_workflowStatus").slideToggle('fast');
            $("#row-form_workflowType").slideToggle('fast');
            $("#row-form_workflowTheme").slideToggle('fast');
            return ($(".toggle-filters-i").text() == '+') ?
                    $(".toggle-filters-i").text('-') :
                    $(".toggle-filters-i").text('+');
        }

        $(function(){
            var hash = window.location.hash;
            hash && $('ul.nav a[href="' + hash + '"]').tab('show');

            $('.nav-tabs a').click(function (e) {
                $(this).tab('show');
                var scrollmem = $('body').scrollTop() || $('html').scrollTop();
                window.location.hash = this.hash;
                $('html,body').scrollTop(scrollmem);
            });
        });

    </script>

{% endblock %}
