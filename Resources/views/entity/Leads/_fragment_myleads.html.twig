{# src/Acme/BlogBundle/Resources/views/Blog/index.html.twig #}

<div class="col-md-12">

    {% if is_granted('ROLE_DISPATCH') %}
        <!-- LEADS EN DISPATCH SI DROITS -->
        <div id="results-list" class="clearfix"></div>
        <h3 class="custom-heading" style="margin-bottom:0px;margin-top:20px;">Leads en attente de dispatch:</h3>
        <div class="col-md-12">
            <div class="streaming-tables">
                <table id="stream_table" class='table table-striped table-bordered'>
                    <thead>
                    <tr>
                        <th>ID</th>
                        <th>Nom</th>
                        <th>Société</th>
                        <th>Email</th>
                        <th>Téléphone</th>
                        <th>Source</th>
                        <th>Status</th>
                        <th>Date de création</th>
                        <th>Actions</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for item in dispatch %}
                        <tr>

                            {% if item.workflowStatus == 'a_attribuer' %}
                                {% set statusLibelle = "A attribuer" %}
                                {% set color =  "style=background-color:#FFFFCC;color:#000000;" %}
                            {% elseif item.workflowStatus == 'en_attente' %}
                                {% set statusLibelle = "En attente" %}
                                {% set color =  "style=background-color:#33CC33;color:#FFFFFF;" %}
                            {% elseif item.workflowStatus == 'gagne' %}
                                {% set statusLibelle = "Gagné" %}
                                {% set color =  "style=background-color:#CCCC66;color:#99FF00;" %}
                            {% elseif item.workflowStatus == 'perdu' %}
                                {% set statusLibelle = "Perdu" %}
                                {% set color =  "style=background-color:#FF3300;color:#FF6600;" %}
                            {% elseif item.workflowStatus == 'inexploitable' %}
                                {% set statusLibelle = "inéxploitable" %}
                                {% set color =  "style=background-color:#FF3300;color:#DCDCDC;" %}
                            {% else %}
                                {% set statusLibelle = "-" %}
                                {% set color =  "" %}
                            {%  endif %}

                            <td {{ color }} >{{ item.id }}</td>
                            <td {{ color }} >{{ item.firstname | capitalize }} {{ item.lastname | capitalize }}</td>
                            <td {{ color }} >
                                {{ getdata( item.content,"etablissement") }}</td>
                            <td {{ color }} >{{ item.email }}</td>
                            <td {{ color }} >{{ getdata( item.content,"phone") }}</td>
                            <td {{ color }} >{{ item.form.name | capitalize }}</td>
                            <td {{ color }} >{{ item.workflowStatus }}</td>
                            <td {{ color }} >{{ item.createdAt|date("d/m/Y h:i:s") }}</td>
                            <td {{ color }}  style="text-align:center">
                                <center>
                                    <button type="button" class="btns  blue  m-sml-btn " style="margin:0px 0px 0px 5px" onClick="window.location.href='{{ path('_leads_suivi_edit', {'id': item.id}) }}'">Edit</button>
                                </center>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="9">Aucun élément dans cette liste</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>

            </div>
        </div>
    {% endif %}

    <!-- LEADS RECHERCHES -->
    <div id="results-list" class="clearfix"></div>
    <h3 class="custom-heading"  style="margin-bottom:10px;margin-top:30px;">Leads de l'utilisateur : {{ affectation }}</h3>
    <div class="col-md-12">
        <div class="streaming-tables">
            <div>
                <span id="found" class="label label-info">{{ pagination.total }} résultat(s)</span>
                <select name="per_page" class="st_per_page" id="st_per_page">
                    {% for limit in limit_options %}
                        <option value="{{ limit }}">{{ limit }}</option>
                    {% endfor %}
                </select>
            </div>
            <table id="stream_table" class='table table-striped table-bordered'>
                <thead>
                <tr>
                    <th>ID</th>
                    <th>Nom</th>
                    <th>Société</th>
                    <th>Email</th>
                    <th>Téléphone</th>
                    <th>Source</th>
                    <th>Assignée à</th>
                    <th>Status</th>
                    <th>Date de création</th>
                    <th>Actions</th>
                </tr>
                </thead>
                <tbody>
                {% for item in elements %}

                    {% if item.workflowStatus == 'a_attribuer' %}
                        {% set statusLibelle = "A attribuer" %}
                        {% set color =  "style=background-color:#FFFFCC;color:#000000;" %}
                    {% elseif item.workflowStatus == 'en_attente' %}
                        {% set statusLibelle = "En attente" %}
                        {% set color =  "style=background-color:#33CC33;color:#FFFFFF;" %}
                    {% elseif item.workflowStatus == 'gagne' %}
                        {% set statusLibelle = "Gagné" %}
                        {% set color =  "style=background-color:#CCCC66;color:#99FF00;" %}
                    {% elseif item.workflowStatus == 'perdu' %}
                        {% set statusLibelle = "Perdu" %}
                        {% set color =  "style=background-color:#FF3300;color:#FF6600;" %}
                    {% elseif item.workflowStatus == 'inexploitable' %}
                        {% set statusLibelle = "inéxploitable" %}
                        {% set color =  "style=background-color:#FF3300;color:#DCDCDC;" %}
                    {% else %}
                        {% set statusLibelle = "-" %}
                        {% set color =  "" %}
                    {%  endif %}


                    <tr>
                        <td {{ color }} >{{ item.id }}</td>
                        <td {{ color }} >{{ item.firstname | capitalize }} {{ item.lastname | capitalize }}</td>
                        <td {{ color }} >
                            {{ getdata( item.content,"etablissement") }}</td>
                        <td {{ color }} >{{ item.email }}</td>
                        <td {{ color }} >{{ getdata( item.content,"phone") }}</td>
                        <td {{ color }} >{{ item.form.name | capitalize }}</td>
                        <td {{ color }} >
                            {% if (item.user) %}
                                {{ item.user.firstName | capitalize }} {{ item.user.lastName | capitalize }}
                            {% else %}
                                Non assignée
                            {% endif %}
                        </td>
                        <td {{ color }} >{{ item.workflowStatus }}</td>
                        <td {{ color }} >{{ item.createdAt|date("d/m/Y h:i:s") }}</td>
                        <td {{ color }}  style="text-align:center">
                            <center>
                                <button type="button" class="btns  blue  m-sml-btn " style="margin:0px 0px 0px 5px" onClick="window.location.href='{{ path('_leads_suivi_edit', {'id': item.id}) }}'">Edit</button>
                            </center>
                        </td>
                    </tr>

                {% else %}

                    <tr>
                        <td colspan="10">Aucun élément dans cette liste</td>
                    </tr>

                {% endfor %}
                </tbody>
            </table>

            {% if pagination.pages_count > 1 %}
                <div class="st_pagination">
                    <ul class="pagination">
                        {% if pagination.page > 1 %}
                            <li><a href="javascript:loadMyLeadsTab('{{ path(pagination.route, {'page': 1, 'limit': pagination.limit}) }}?{{ app.request.query.all|url_encode }}');return false;" class="first">Début</a></li>
                            <li><a href="javascript:loadMyLeadsTab('{{ path(pagination.route, {'page': pagination.page-1, 'limit': pagination.limit}) }}?{{ app.request.query.all|url_encode }}');return false;">&larr; Précédent</a></li>
                        {% endif %}
                        {% for i in pagination.pagination_min..pagination.pagination_max %}
                            <li {% if pagination.page == i %}class="active" {% endif %}>
                                <a href="javascript:loadMyLeadsTab('{{ path(pagination.route, {'page': i, 'limit': pagination.limit}) }}?{{ app.request.query.all|url_encode }}');return false;" {% if pagination.page == i %}class="active" {% endif %}>{{ i }}</a>
                            </li>
                        {% endfor %}
                        {% if pagination.page < pagination.pages_count %}
                            <li><a href="javascript:loadMyLeadsTab('{{ path(pagination.route, {'page': pagination.page+1, 'limit': pagination.limit}) }}?{{ app.request.query.all|url_encode }}');return false;">Suivant &rarr;</a></li>
                            <li><a href="javascript:loadMyLeadsTab('{{ path(pagination.route, {'page': pagination.pages_count, 'limit': pagination.limit}) }}?{{ app.request.query.all|url_encode }}');return false;">Fin</a></li>
                        {% endif %}
                    </ul>
                </div>
            {% endif %}

        </div>
    </div>
</div>
<script language="text/javascript">
    $("#st_per_page option[value='{{ pagination.limit }}']").attr('selected', 'selected');
</script>