{# src/Acme/BlogBundle/Resources/views/Blog/index.html.twig #}

<div class="col-md-12 row">

    {% if is_granted('ROLE_DISPATCH') %}
        <!-- LEADS EN DISPATCH SI DROITS -->
        <div id="results-list-dispatch" class="clearfix"></div>
        <h3 class="custom-heading" style="margin-bottom:0px;margin-top:20px;">Leads en attente de dispatch:</h3>
        <div class="col-md-12">
            <div class="streaming-tables pt20">
                <!-- Nav tabs -->
                <ul class="nav nav-tabs" role="tablist" id="dispatch-tabs">
                    <li role="presentation" class="active"><a href="#dispatch-autres" aria-controls="dispatch-autres" role="tab" data-toggle="tab">Autres</a></li>
                    <li role="presentation" class=""><a href="#dispatch-inexploitables" aria-controls="dispatch-inexploitables" role="tab" data-toggle="tab">Inexploitables</a></li>
                </ul>
                <!-- Tab panes -->
                <div class="tab-content row" style="display: block">
                    <div role="tabpanel" class="tab-pane active" id="dispatch-autres">
                        <table class='table table-striped table-bordered' id="dispatch-dataTable-autres">
                            <thead>
                            <tr>
                                <th>Nom</th>
                                <th>Société</th>
                                <th>Email</th>
                                <th>Téléphone</th>
                                <th>Status</th>
                                <th>Date</th>
                                <th>Actions</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for item in dispatch if item.workflowStatus is not same as('inexploitable') %}
                                <tr>
                                    {% if item.workflowStatus in ['a_attribuer', 'a_traiter'] %} {#Jaune#}
                                        {% set color =  "style=background-color:#FFFFCC;color:#000000;" %}
                                    {% elseif item.workflowStatus in ['perdu','gagne'] %} {#Normal#}
                                        {% set color =  "style=background-color:#FFFFFF;color:#FF6600;" %}
                                    {% elseif item.workflowStatus == 'en_attente' %} {#Bleu#}
                                        {% set color =  "style=background-color:#3498db;color:#000000;" %}
                                    {% elseif item.workflowStatus == 'inexploitable' %} {#rouge#}
                                        {% set color =  "style=background-color:#e74c3c;color:#DCDCDC;" %}
                                    {% else %}
                                        {% set statusLibelle = "-" %}
                                        {% set color = "style=background-color:#3498db;color:#000000;" %}
                                    {% endif %}

                                    <td {{ color }} >{{ item.firstname | capitalize }} {{ item.lastname | capitalize }}</td>
                                    <td {{ color }} >
                                        {{ getdata( item.content,"etablissement") }}</td>
                                    <td {{ color }} >{{ item.email }}</td>
                                    <td {{ color }} >{{ getdata( item.content,"phone") }}</td>
                                    <td {{ color }} >{{ item.workflowStatus }}</td>
                                    <td {{ color }} >{{ item.createdAt|date("d/m/Y h:i:s") }}</td>
                                    <td {{ color }}  style="text-align:center">
                                        <center>
                                            <button type="button" class="btns  blue  m-sml-btn " style="margin:0px 0px 0px 5px" onClick="window.location.href='{{ path('_leads_suivi_edit', {'id': item.id}) }}'">Edit</button>
                                        </center>
                                    </td>
                                </tr>
                            {% else %}
                                <tr>
                                    <td colspan="7">Aucun élément dans cette liste</td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                    <div role="tabpanel" class="tab-pane" id="dispatch-inexploitables">
                        <table class='table table-striped table-bordered' id="dispatch-dataTable-inexploitables">
                            <thead>
                            <tr>
                                <th>Nom</th>
                                <th>Société</th>
                                <th>Email</th>
                                <th>Téléphone</th>
                                <th>Status</th>
                                <th>Date</th>
                                <th>Actions</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for item in dispatch if item.workflowStatus == 'inexploitable'%}
                                <tr>

                                    {% if item.workflowStatus in ['a_attribuer', 'a_traiter'] %} {#Jaune#}
                                        {% set color =  "style=background-color:#FFFFCC;color:#000000;" %}
                                    {% elseif item.workflowStatus in ['perdu','gagne'] %} {#Normal#}
                                        {% set color =  "style=background-color:#FFFFFF;color:#FF6600;" %}
                                    {% elseif item.workflowStatus == 'en_attente' %} {#Bleu#}
                                        {% set color =  "style=background-color:#3498db;color:#000000;" %}
                                    {% elseif item.workflowStatus == 'inexploitable' %} {#rouge#}
                                        {% set color =  "style=background-color:#e74c3c;color:#DCDCDC;" %}
                                    {% else %}
                                        {% set statusLibelle = "-" %}
                                        {% set color = "style=background-color:#3498db;color:#000000;" %}
                                    {% endif %}

                                    <td {{ color }} >{{ item.firstname | capitalize }} {{ item.lastname | capitalize }}</td>
                                    <td {{ color }} >
                                        {{ getdata( item.content,"etablissement") }}</td>
                                    <td {{ color }} >{{ item.email }}</td>
                                    <td {{ color }} >{{ getdata( item.content,"phone") }}</td>
                                    <td {{ color }} >{{ item.workflowStatus }}</td>
                                    <td {{ color }} >{{ item.createdAt|date("d/m/Y h:i:s") }}</td>
                                    <td {{ color }}  style="text-align:center">
                                        <center>
                                            <button type="button" class="btns  blue  m-sml-btn " style="margin:0px 0px 0px 5px" onClick="window.location.href='{{ path('_leads_suivi_edit', {'id': item.id}) }}'">Edit</button>
                                        </center>
                                    </td>
                                </tr>
                            {% else %}
                                <tr>
                                    <td colspan="7">Aucun élément dans cette liste</td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    {% endif %}

    <!-- LEADS RECHERCHES -->
    <div id="results-list" class="clearfix"></div>
    <h3 class="custom-heading"  style="margin-bottom:10px;margin-top:30px;">Leads de l'utilisateur : {{ affectation }}</h3>
    <div class="col-md-12">
        <div class="streaming-tables">
            <div class="">
                <span id="found" class="label label-info">{{ pagination.total }} résultat(s)</span>
                <select name="per_page" class="st_per_page" id="st_per_page">
                    {% for limit in limit_options %}
                        <option value="{{ limit }}" {{ pagination.limit == limit ? "selected" }}>{{ limit }}</option>
                    {% endfor %}
                </select>
            </div>
            <table class='table table-striped table-bordered mt20' id="mylead-dataTable">
                <thead>
                <tr>
                    <th>Nom</th>
                    <th>Société</th>
                    <th>Email</th>
                    <th>Téléphone</th>
                    <th>Assignée à</th>
                    <th>Status</th>
                    <th>Date</th>
                    <th>Actions</th>
                </tr>
                </thead>
                <tbody>
                {% for item in elements %}

                    {% if item.workflowStatus in ['a_attribuer', 'a_traiter'] %} {#Jaune#}
                        {% set color =  "style=background-color:#FFFFCC;color:#000000;" %}
                    {% elseif item.workflowStatus in ['perdu','gagne'] %} {#Normal#}
                        {% set color =  "style=background-color:#FFFFFF;color:#FF6600;" %}
                    {% elseif item.workflowStatus == 'en_attente' %} {#Bleu#}
                        {% set color =  "style=background-color:#3498db;color:#000000;" %}
                    {% elseif item.workflowStatus == 'inexploitable' %} {#rouge#}
                        {% set color =  "style=background-color:#e74c3c;color:#DCDCDC;" %}
                    {% else %}
                        {% set statusLibelle = "-" %}
                        {% set color = "style=background-color:#3498db;color:#000000;" %}
                    {% endif %}

                    <tr>
                        <td {{ color }} >{{ item.firstname | capitalize }} {{ item.lastname | capitalize }}</td>
                        <td {{ color }} >
                            {{ getdata( item.content,"etablissement") }}</td>
                        <td {{ color }} >{{ item.email }}</td>
                        <td {{ color }} >{{ getdata( item.content,"phone") }}</td>
                        <td {{ color }} >
                            {% if (item.user) %}
                                {{ item.user.firstName | capitalize }} {{ item.user.lastName | capitalize }}
                            {% else %}
                                Non assignée
                            {% endif %}
                        </td>
                        <td {{ color }} >{{ item.workflowStatus }}</td>
                        <td {{ color }} >{{ item.createdAt|date("d/m/Y h:i:s") }}</td>
                        <td {{ color }}  style="text-align:center">
                            <center>
                                <button type="button" class="btns  blue  m-sml-btn " style="margin:0px 0px 0px 5px" onClick="window.location.href='{{ path('_leads_suivi_edit', {'id': item.id}) }}'">Edit</button>
                            </center>
                        </td>
                    </tr>

                {% else %}

                    <tr>
                        <td colspan="8">Aucun élément dans cette liste</td>
                    </tr>

                {% endfor %}
                </tbody>
            </table>

            {% if pagination.pages_count > 1 %}
                <div class="st_pagination">
                    <ul class="pagination">
                        {% if pagination.page > 1 %}
                            <li><a href="javascript:loadMyLeadsTab('{{ path(pagination.route, {'page': 1, 'limit': pagination.limit}) }}?{{ app.request.query.all|url_encode }}');" class="first">Début</a></li>
                            <li><a href="javascript:loadMyLeadsTab('{{ path(pagination.route, {'page': pagination.page-1, 'limit': pagination.limit}) }}?{{ app.request.query.all|url_encode }}');">&larr; Précédent</a></li>
                        {% endif %}
                        {% for i in pagination.pagination_min..pagination.pagination_max %}
                            <li {% if pagination.page == i %}class="active" {% endif %}>
                                <a href="javascript:loadMyLeadsTab('{{ path(pagination.route, {'page': i, 'limit': pagination.limit}) }}?{{ app.request.query.all|url_encode }}');" {% if pagination.page == i %}class="active" {% endif %}>{{ i }}</a>
                            </li>
                        {% endfor %}
                        {% if pagination.page < pagination.pages_count %}
                            <li><a href="javascript:loadMyLeadsTab('{{ path(pagination.route, {'page': pagination.page+1, 'limit': pagination.limit}) }}?{{ app.request.query.all|url_encode }}');">Suivant &rarr;</a></li>
                            <li><a href="javascript:loadMyLeadsTab('{{ path(pagination.route, {'page': pagination.pages_count, 'limit': pagination.limit}) }}?{{ app.request.query.all|url_encode }}');">Fin</a></li>
                        {% endif %}
                    </ul>
                </div>
            {% endif %}

        </div>
    </div>
</div>
<script language="text/javascript">
    $("#mylead-dataTable").dataTable({paging:false, searching:true});
    $("#dispatch-dataTable-inexploitables").dataTable({paging:false, searching:true});
    $("#dispatch-dataTable-autres").dataTable({paging:false, searching:true});
    $("#st_per_page option[value='{{ pagination.limit }}']").attr('selected', 'selected');
</script>
