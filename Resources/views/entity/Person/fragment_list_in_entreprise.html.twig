
<div class="streaming-tables">

    <table id="stream_table" class='table table-striped table-bordered'>
        <thead>
        <tr>
            <th>id</th>
            <th>Nom</th>
            <th>Prenom</th>
            <th>Téléphone</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for item in elements %}
            <tr>
                <td style="vertical-align: middle;">{{ item.id }}</td>
                <td style="vertical-align: middle;">{{ item.lastname }}</td>
                <td style="vertical-align: middle;">{{ item.firstname }}</td>
                <td style="vertical-align: middle;">{{ item.phone }}</td>
                <td style="text-align:center">
                    <a href="{{ path('_person_edit', {'id': item.id}) }}" alt="Editer"><img title="Editer" style="height:40px;" src="{{ asset('bundles/tellawleadsfactory/img/icons2/editer.png') }}"/></a>
                    <a href="#" onClick="if (confirm ('Confirmez vous la suppression ?')) window.location.href='{{ path('_person_delete', {'id': item.id}) }}'"  alt="Supprimer"><img title="Supprimer" style="height:40px;" src="{{ asset('bundles/tellawleadsfactory/img/icons2/supprimer.png') }}"/></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">Aucun élément dans cette liste</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
