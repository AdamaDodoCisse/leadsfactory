{# src/Acme/BlogBundle/Resources/views/Blog/index.html.twig #}
{% extends 'TellawLeadsFactoryBundle::base.html.twig' %}
{% block body %}

    <div class="col-md-12">
        <div class="col-md-8">
            <div class="heading-sec" id="intro6">
                <h1>Visualisation <i>d'un ségment</i></h1>
                <div style="clear:both"></div>

            </div>
        </div>
        <div class="col-md-4">
            <div class="btn-group btn-group-justified">
                <a class="btn blue" href="{{ path ('_marketing_segment_download_csv', {'id': id}) }}">Télécharger le CSV</a>
            </div>
        </div>
    </div>

    {% if (searchResults) %}

        <div class="col-md-12">

        </div>

        <div class="col-md-12">
            <div class="">
                <table id="stream_table" class="table table-striped table-bordered">
                    <thead>
                    <tr>
                        {% for header in fieldsToDisplay %}
                            <th>{{ header }}</th>
                        {% endfor %}
                    </tr>
                    </thead>
                    <tbody>
                    {% for lead in searchResults %}
                        <tr>
                            {% for header in fieldsToDisplay %}
                                <td> {{ objectget({'leadsource':lead._source, 'header':header}) }}</td>
                            {% endfor %}
                        </tr>
                    {% else %}
                    <tr>
                        <td colspan="{{ nbFieldsToDisplay }}"> Aucun résultat sur la période </td>
                    </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    {% endif %}

{% endblock %}