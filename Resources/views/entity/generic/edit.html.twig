{# src/Acme/BlogBundle/Resources/views/Blog/index.html.twig #}
{% form_theme form 'TellawLeadsFactoryBundle:Form:fields.html.twig' %}

{% extends 'TellawLeadsFactoryBundle::base.html.twig' %}
{% block body %}

    <div class="col-md-8">
        {% for flashMessage in app.session.flashbag.get('error') %}
        <div class="notifications widget-body pink">
            <p style="line-height:normal">{{ flashMessage }}</p>
        </div>
        {% endfor %}
    </div>

    <div class="col-md-12">
        <div class="heading-sec" id="intro6">
            <h1>{{ title }}</h1>
        </div>
    </div>

    <div class="col-md-8">
        <div class="widget-body custom-form">
            {{ form(form) }}
        </div>
    </div>

    {% if helpMessage is defined %}
    <div class="col-md-4">
        <b>Aide :</b><br/>
        {{ helpMessage }}
    </div>
    {% endif %}


{% endblock %}

{% block javascript %}

<script>

    function validateFormAction() {
        if (undefined !== typeof(editor))
            $("#field_testvalue").val(editor.getText());
    }

</script>

{% endblock %}
