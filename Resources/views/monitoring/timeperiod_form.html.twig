{% form_theme form 'TellawLeadsFactoryBundle:Form:fields.html.twig' %}
{{ form(form) }}
<script type="text/javascript" language="javascript">

    function formAction() {

        value = $(".periodConfiguration input[type=radio]:checked").attr('value');

        if (value!='custom') {
            $("#row-form_datemax").hide();
            $("#row-form_datemin").hide();
        } else {
            $("#row-form_datemax").show();
            $("#row-form_datemin").show();
        }

    }

    function configureGraph () {

        value = $(".displayConfiguration input[type=radio]:checked").attr('value');

        if (value!='ok') {
            $("#row-form_type").hide();
            $("#row-form_zoom").hide();
            $("#row-form_moyenne").hide();
            $("#row-form_total").hide();
        } else {
            $("#row-form_type").show();
            $("#row-form_zoom").show();
            $("#row-form_moyenne").show();
            $("#row-form_total").show();
        }

    }

    $( ".periodConfiguration" )
        .click(function () {
            formAction();
    });

    $( ".displayConfiguration" )
        .click(function () {
        configureGraph();
    });

    formAction ( $('#form_period').val() );
    configureGraph ( 'nok' );

</script>
<style>
    #row-form_period label, #form_displaymode label{
        padding: 0px 15px 0px 5px;
    }

</style>
