{% block javascript %}
<script>
    $("a[href^=#]").click(function(e) {
        e.preventDefault();
        var dest = $(this).attr('href');
        $('html,body').animate({
            scrollTop: $(dest).offset().top - 60
        }, 'slow');
    });
    
</script>
