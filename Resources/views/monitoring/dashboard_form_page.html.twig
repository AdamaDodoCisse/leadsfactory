    </div>

    <!-- Chart -->
    {% set objects = [entity] %}
    {% if(app.request.get('form')) %}
        {{ render(controller('TellawLeadsFactoryBundle:Admin/Monitoring:chartDashboard', {
            "period"    : app.request.get('form')['period'],
            "mode"      : "Form",
            "objects"   : [entity]
        }
        )) }}
    {% else %}
        {{ render(controller('TellawLeadsFactoryBundle:Admin/Monitoring:chartDashboard', {
            "mode"      : "Form",
            "objects"   : [entity]
        }
        )) }}
