{# src/Acme/BlogBundle/Resources/views/Blog/index.html.twig #}
{% extends 'TellawLeadsFactoryBundle::base.html.twig' %}
{% block body %}

	<div class="col-md-12">
        <div class="col-md-8">
        <div class="heading-sec" id="intro6">
            <h1>Dashboards <i>Marketing</i></h1>
            <div style="clear:both"></div>
            <div class="titleDescription"><em>Les dashboards marketing vous permettent de presenter les données de la lead's suivant vos paramétrages. </em></div>
        </div>
        </div>

	</div>
    <div class="col-md-12">
        <h3 class="custom-heading">Dashboards disponibles:</h3>
        <div class="">
            <div class="streaming-tables">
                <table id="stream_table" class='table table-striped table-bordered'>
                    <thead>
                    <tr>
                        <th>Nom</th>
                        <th>Actions</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for item in dashboards %}
                        <tr>
                            <td style="vertical-align: middle;">{{ item._source.title }}</td>
                            <td style="text-align:center">
                                <a href="{{ path('_marketing_kibana_dashboard_edit', {'id': item._id}) }}" alt="Visualiser"><img title="Visualiser" style="height:40px;" src="{{ asset('bundles/tellawleadsfactory/img/icons2/statistiques.png') }}"/></a>
                            </td>
                        </tr>

                    {% else %}

                        <tr>
                            <td colspan="5">Aucun élément dans cette liste</td>

                        </tr>

                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>



</div>
{% endblock %}
{% block javascript %}

{% endblock %}